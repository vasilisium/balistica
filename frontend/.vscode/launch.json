{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "runtimeArgs": [
                "--user-data-dir",
                "--remote-debugging-port=9222"
                ],
            "sourceMaps": true,
            "trace": true,
            "webRoot": "${workspaceRoot}/client/",
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        }
    ]
}